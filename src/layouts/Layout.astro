---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&display=swap" rel="stylesheet">
		<script src="https://static.arlcrow.site/fa/js/solid.min.js"></script>
		<script src="https://static.arlcrow.site/fa/js/brands.min.js"></script>
		<script src="https://static.arlcrow.site/fa/js/duotone.min.js"></script>
		<script src="https://static.arlcrow.site/fa/js/fontawesome.js"></script>
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="dark:bg-neutral-950 dark:text-white">
		<slot />
	</body>
</html>
<style is:global>
	html {
		font-family: "IBM Plex Sans", system-ui, sans-serif;
	}
</style>
