                            {l10n.experience.mts.job_title}
                        </li>
                        <li>
                    <span class="fa-li">
                        <i class="fa-solid fa-user-graduate text-lisiy-accent-500"></i>
                    </span>
                            <span class="font-medium">{l10n.experience.grade}:</span>
                            {l10n.experience.mts.grade}
                        </li>
                    </ul>
                </div>
            </div>
        </section>

        <section class="mt-6">
