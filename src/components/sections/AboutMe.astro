---
import { Picture } from "astro:assets";
import myPhoto from "../../images/myphoto.png";
import time from "../../utils/time";

const age = time.age;
const { l10n } = Astro.props;
---

<section class="mt-6" id="about-me">
  <div class="flex flex-col items-center mb-6">
    <div class="flex-shrink-0 mb-4 flex flex-col items-center relative">
      <Picture
        src={myPhoto}
        alt={l10n.photo}
        formats={["webp"]}
        widths={[128, 256, 384]}
        loading="lazy"
        decoding="async"
        class="skeleton w-[12.5rem] h-[12.5rem] md:h-[25vh] md:w-[25vh] object-cover rounded-full"
      />
      <p class="text-4xl font-black text-center mt-4">{l10n.name}</p>
      <p class="text-sm text-gray-500 text-center mt-1">({l10n.aka})</p>
    </div>
    <div class="flex flex-col md:flex-row gap-4 w-full max-w-screen">
      <div class="flex-1 flex flex-col items-center">
        <h2 class="text-xl font-bold text-center md:text-left mb-2">
          <i class="fa-solid fa-user mr-1"></i>
          {l10n.personal_information.title}
        </h2>
        <div
          class="flex flex-wrap items-center justify-center gap-2 sm:flex-row"
        >
          <div
            class="bg-zinc-950 p-2 border-2 border-gray-800 rounded-md flex items-center"
          >
            <i class="text-accent-500 fa-solid fa-calendar-days mr-2"></i>
            {l10n.personal_information.birthday} ({age}
            {l10n.personal_information.years_old})
          </div>
          <div
            class="bg-zinc-950 p-2 border-2 border-gray-800 rounded-md flex items-center"
          >
            <i class="text-accent-500 fa-solid fa-location-dot mr-2"></i>
            {l10n.personal_information.location}
          </div>
          <div
            class="bg-zinc-950 p-2 border-2 border-gray-800 rounded-md flex items-center"
          >
            <i class="text-accent-500 fa-solid fa-language mr-2"></i>{
              l10n.personal_information.languages
            }
          </div>
        </div>
      </div>
      <div class="flex-1 flex flex-col items-center">
        <h2 class="text-xl font-bold mb-2 text-center md:text-left">
          <i class="fa-solid fa-envelope mr-2"></i>
          {l10n.contacts.title}
        </h2>
        <div
          class="flex flex-wrap items-center justify-center gap-2 sm:flex-row"
        >
          <div
            class="bg-zinc-950 p-2 border-2 border-gray-800 rounded-md flex items-center"
          >
            <a
              class="focus:text-accent-500 hover:text-accent-500 transition flex items-center"
              href="https://t.me/arlcrow123"
            >
              <i class="text-accent-500 fa-brands fa-telegram mr-2"></i>
              {l10n.contacts.telegram}
            </a>
          </div>
          <div
            class="bg-zinc-950 p-2 border-2 border-gray-800 rounded-md flex items-center"
          >
            <a
              class="focus:text-accent-500 hover:text-accent-500 transition flex items-center"
              href="mailto:matvey+website@arlcrow.site"
            >
              <i class="text-accent-500 fa-solid fa-envelope mr-2"></i>
              {l10n.contacts.email}
            </a>
          </div>
        </div>
        <h2 class="text-xl font-bold mb-2 text-center md:text-left mt-2">
          <i class="fa-solid fa-circle-dollar mr-1"></i>
          {l10n.donate.title}
        </h2>
        <div
          class="flex flex-wrap items-center justify-center gap-2 sm:flex-row"
        >
          <div
            class="bg-zinc-950 p-2 border-2 border-gray-800 rounded-md flex items-center"
          >
            <a
              class="focus:text-accent-500 hover:text-accent-500 transition flex items-center"
              href="https://t.me/send?start=IVqFOqa9ZmKB"
            >
              <i class="text-accent-500 fa-brands fa-telegram mr-2"></i>
              {l10n.donate.crypto_bot}
            </a>
          </div>
          <div
            class="bg-zinc-950 p-2 border-2 border-gray-800 rounded-md flex items-center"
          >
            <a
              class="focus:text-accent-500 hover:text-accent-500 transition flex items-center"
              href="https://www.tbank.ru/cf/7CcrsRDUA5"
            >
              <i class="text-accent-500 fa-solid fa-credit-card-front mr-2"></i>
              {l10n.donate.t_bank}
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
