---
const { l10n } = Astro.props;
---

<section class="mt-6" id="experience">
  <h2 class="text-3xl font-bold mb-4 flex items-center">
    <i class="text-accent-400 fa-solid fa-briefcase mr-2"></i>
    {l10n.experience.title}
  </h2>
  <div
    class="grid grid-cols-1 gap-4 md:grid-cols-[repeat(auto-fit,minmax(0,1fr))]"
  >
    <div
      class="bg-zinc-950 flex flex-col p-4 border-2 border-gray-800 rounded-lg mb-4"
    >
      <h3 class="text-2xl font-semibold items-center mb-1">
        <i class="fa-solid fa-tag"></i>
        {l10n.experience.mts.title}
      </h3>
      <p class="text-sm font-normal text-gray-500 mb-4">
        {l10n.experience.mts.date}
      </p>
      <ul class="fa-ul ml-6 space-y-2">
        <li>
          <span class="fa-li">
            <i class="fa-solid fa-circle-dollar-to-slot text-accent-500"></i>
          </span>
          <span class="font-medium">{l10n.experience.job_title}:</span>
          {l10n.experience.mts.job_title}
        </li>
        <li>
          <span class="fa-li">
            <i class="fa-solid fa-user-graduate text-accent-500"></i>
          </span>
          <span class="font-medium">{l10n.experience.grade}:</span>
          {l10n.experience.mts.grade}
        </li>
      </ul>
    </div>
  </div>
</section>
